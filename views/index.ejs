<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Interactive Ferrers Diagram</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div id="controls">
        <button id="clear-button">Clear</button>
        <button id="toggle-partition-button">Partition</button>
        <button id="toggle-hookset-button">Hookset</button>
        <button id="compute-atom-monoid-button">Compute Atom Monoid</button>
    </div>
    <div id="content">
        <div id="sidebar">
            <div id="partition-display"><h3>Partition:</h3></div>
            <div id="hookset-display"><h3>Hookset:</h3></div>
            <div id="atom-partition-display"><h3>Atom Partition:</h3></div>
        </div>
        <div id="ferrers-diagram"></div>
        <div id="color-picker">
            <div class="color-box blue"></div>
            <div class="color-box red"></div>
            <div class="color-box green"></div>
            <div class="color-box orange"></div>
            <div class="color-box black"></div>
            <div class="color-box gray"></div>
        </div>
    </div>
    <script type="module" src="/diagram.js"></script>
    <script type="module" src="/hooks.js"></script>
    <script type="module" src="/partition.js"></script>
    <script type="module" src="/atom_monoid.js"></script>
    <script type="module" src="/script.js"></script>
</body>
</html>
